<!-- header_background.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the header -->
    <solid android:color="@color/material_ripple_light" />

    <!-- Optionally, you can add corner radius to round the corners -->
    <corners android:radius="8dp" />

    <!-- Optionally, you can add stroke to give the header a border -->
    <stroke
        android:width="1dp"
        android:color="@color/material_ripple_light" />
</shape>
