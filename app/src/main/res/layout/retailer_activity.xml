<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="8dp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/leftarrow_white" />

                <RelativeLayout
                    android:id="@+id/rlImg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_with_border" />

                    <com.newsalesbeatApp.customview.CustomTextView
                        android:id="@+id/userPic"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_back_red"
                        android:gravity="center"
                        android:maxLength="1"
                        android:text="T"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:myfont="GothamMedium.otf" />


                </RelativeLayout>

                <com.newsalesbeatApp.customview.CustomTextView
                    android:id="@+id/pageTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:myfont="GothamMedium.otf" />

                <ImageView
                    android:id="@+id/imgUpload"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="15dp"
                    android:src="@drawable/ic_cloud_upload_black_24dp"
                    android:tint="@color/textColor" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/headerTCPC"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <com.newsalesbeatApp.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="Tc :"
            android:textColor="@color/textColor"
            app:myfont="GothamMedium.otf" />

        <com.newsalesbeatApp.customview.CustomTextView
            android:id="@+id/tvTcLocal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:myfont="GothamMedium.otf" />

        <com.newsalesbeatApp.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Nc :"
            android:textColor="@color/textColor"
            app:myfont="GothamMedium.otf" />

        <com.newsalesbeatApp.customview.CustomTextView
            android:id="@+id/tvNcLocal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:myfont="GothamMedium.otf" />

        <com.newsalesbeatApp.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Pc :"
            android:textColor="@color/textColor"
            app:myfont="GothamMedium.otf" />

        <com.newsalesbeatApp.customview.CustomTextView
            android:id="@+id/tvPcLocal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:myfont="GothamMedium.otf" />


        <com.newsalesbeatApp.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Sale :"
            android:textColor="@color/textColor"
            app:myfont="GothamMedium.otf" />

        <com.newsalesbeatApp.customview.CustomTextView
            android:id="@+id/tvSaleLocal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:myfont="GothamMedium.otf" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/sortbyDistance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgFilterByValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/filter_by" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/retailerTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/material_light_hint_text" />

    <HorizontalScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_middle"
        android:minHeight="?attr/actionBarSize"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/tab_sort"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xmlarge"
                android:background="@drawable/tab_rounded_accent"
                android:onClick="onButtonTabClick"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:text="SORT"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tab_active"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xmlarge"
                android:onClick="onButtonTabClick"
                android:background="@drawable/tab_rounded_accent"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:text="Very Active"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/tab_leastActive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xmlarge"
                android:onClick="onButtonTabClick"
                android:background="@drawable/tab_rounded_accent"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:text="LEAST ACTIVE"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tab_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xmlarge"
                android:background="@drawable/tab_rounded_accent"
                android:onClick="onButtonTabClick"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:text="SCHEDULED"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tab_visited"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xmlarge"
                android:background="@drawable/tab_rounded_accent"
                android:onClick="onButtonTabClick"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:text="VISITED"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="0dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.viewpager.widget.ViewPager
        android:visibility="gone"
        android:id="@+id/retailerViewPagerNew"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.newsalesbeatApp.customview.CustomViewPager
        android:id="@+id/retailerViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>