<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llRet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".35"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center|left"
                    android:text="Retailer Name"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".05"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvRetName"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".6"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llRetCHIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llRet"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".35"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center|left"
                    android:text="CheckIn Time"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".05"
                    android:gravity="center"
                    android:text=":" />

                <TextView
                    android:id="@+id/tvChkIN"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".6"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llCmntHis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llRetCHIN"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center|left"
                    android:text="Comments"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".05"
                    android:gravity="center"
                    android:text=":" />

                <TextView
                    android:id="@+id/tvCommentsHis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".3"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Check out"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".1"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvChkOUT"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".6"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tvOrderTypeHis"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="?attr/colorAccent"
            android:gravity="center"
            android:rotation="45"
            android:singleLine="true"
            android:text="Productive"
            android:textColor="@color/textColor"
            android:textSize="10sp"
            android:translationX="36dp"
            android:translationY="8dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>