<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlFBy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@color/divider_color">

        <AutoCompleteTextView
            android:id="@+id/actvFilterBy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_toLeftOf="@+id/imgDropDownFilter"
            android:background="@android:color/transparent"
            android:editable="false"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imgDropDownFilter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/drop_down"
            android:tint="@color/colorAccent" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@color/divider_color">

        <AutoCompleteTextView
            android:id="@+id/actvFilterWith"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imgDropDownFilterWith"
            android:background="@android:color/transparent"
            android:editable="false"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imgDropDownFilterWith"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/drop_down"
            android:tint="@color/colorAccent" />


    </RelativeLayout>


    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="Apply"
        android:textColor="@android:color/white" />

</LinearLayout>