<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Date & Time Header -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:gravity="center"
            android:padding="8dp"
            android:text="10 Mar, 2025 (10:28 PM)"
            android:textColor="#555"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <!-- Firm Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Firm Name"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvFirmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RINK"
                    android:textColor="#000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Town/City -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Town/City"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTownCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamrej"
                    android:textColor="#000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- State -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="State"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStateD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gujarat"
                    android:textColor="#000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Owner Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Owner Name"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAAA"
                    android:textColor="#000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Mobile Number with Phone Icon -->
            <LinearLayout
                android:id="@+id/llMobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile - 1"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvMobile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imgCall1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:contentDescription="Call Icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llMobile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile - 2"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvMobile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imgCall2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:contentDescription="Call Icon"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Share & View More Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@android:color/white">

            <Button
                android:id="@+id/tvShareNewDis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SHARE"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="10dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@drawable/button_border"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tvViewMoreD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VIEW MORE"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="10dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@drawable/button_border"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

