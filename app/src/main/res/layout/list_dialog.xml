<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/backPage"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/leftarrow_white"
            android:tint="@color/colorAccent"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvSimpleTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gothammediumf"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Select employee."
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_ripple_light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSimpleList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>