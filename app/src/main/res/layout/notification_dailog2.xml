<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/textColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgNotificationWithMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_notification3"
            android:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/tvNotificationWithMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothammedium"
            android:gravity="center"
            android:padding="10dp"
            android:text="You have not enetered opening stock yet. Please enter."
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btnNotificationWithMsg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ok"
            android:textColor="@color/textColor"
            android:theme="@style/ButtonTheme" />

    </LinearLayout>

</androidx.cardview.widget.CardView>