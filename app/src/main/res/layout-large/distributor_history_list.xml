     </RelativeLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <com.newsalesbeatApp.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Firm Name"
                app:myfont="GothamMedium.otf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":" />

            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvFirmName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:paddingLeft="2dp"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamLight.otf" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.newsalesbeatApp.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Town/City"
                app:myfont="GothamMedium.otf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":" />

            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvTownCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:paddingLeft="2dp"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamLight.otf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible">

            <com.newsalesbeatApp.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="State"
                app:myfont="GothamMedium.otf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":" />


            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvStateD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamLight.otf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.newsalesbeatApp.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Owner Name"
                app:myfont="GothamMedium.otf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":" />

            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvOwnerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:paddingLeft="2dp"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamLight.otf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMobile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.newsalesbeatApp.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Mobile- 1"
                app:myfont="GothamMedium.otf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":" />


            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvMobile1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingLeft="2dp"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamLight.otf" />

            <ImageView
                android:id="@+id/imgCall1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_local_phone_black_24dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMobile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.newsalesbeatApp.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Mobile- 2"
                app:myfont="GothamMedium.otf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":" />

            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvMobile2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingLeft="2dp"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamLight.otf" />


            <ImageView
                android:id="@+id/imgCall2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_local_phone_black_24dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvShareNewDis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/custom_rectangle"
                android:gravity="center"
                android:text="Share"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamMedium.otf" />

            <com.newsalesbeatApp.customview.CustomTextView
                android:id="@+id/tvViewMoreD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/custom_rectangle"
                android:gravity="center"
                android:text="View More"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                app:myfont="GothamMedium.otf" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

</LinearLayout>