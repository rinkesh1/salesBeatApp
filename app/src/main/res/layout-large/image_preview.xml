<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ff282828"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/top_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<com.vanniktech.android.imagecropper.ImageCropperView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="#ff282828"
            app:grid_color="@color/colorAccent"/>-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:background="#ff282828"
            android:src="@drawable/placeholder3" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/llPreview"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/image_button_rotate"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:background="@color/colorAccent"
                android:text="Rotate Image"
                android:drawableStart="@drawable/ic_refresh"
                android:padding="10dp"
                android:drawablePadding="8dp"
                android:textColor="@color/textColor" />


            <Button
                android:id="@+id/btnDone"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:background="@color/colorPrimary"
                android:text="Ok"
                android:drawableStart="@drawable/ic_update"
                android:padding="10dp"
                android:drawablePadding="8dp"
                android:textColor="@color/textColor" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>