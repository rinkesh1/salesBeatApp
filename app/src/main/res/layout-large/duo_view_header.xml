<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/duo_view_header_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gothammedium"
        android:text="John Doe"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/duo_view_header_text_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:fontFamily="@font/gothamlight"
        android:text="Manager"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <View
        android:id="@+id/duo_view_header_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white" />


    <LinearLayout
        android:id="@+id/llIncentive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothamlight"
                android:text="My Incentive(MTD)"
                android:textColor="@color/textColor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUserIncentive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/gothammedium"
                android:gravity="center"
                android:text="INR 100"
                android:textColor="@color/textColor"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/imgIncentiveInfo"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/info_icon"
                android:tint="@color/textColor" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>