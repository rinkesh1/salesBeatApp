<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="myfont" format="string" />
    </declare-styleable>

    <declare-styleable name="PieGraph">
        <attr name="pieInnerCircleRatio" format="integer" />
        <attr name="pieSlicePadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LineGraph">
        <attr name="lineStrokeColor" format="color" />
        <attr name="lineAxisColor" format="color" />
        <attr name="lineStrokeWidth" format="dimension" />
        <attr name="lineStrokeSpacing" format="dimension" />
        <attr name="lineUseDip" format="boolean" />
        <attr name="lineBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="BarGraph">
        <attr name="barAxisColor" format="color" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="barShowAxis" format="boolean" />
        <attr name="barShowAxisLabel" format="boolean" />
        <attr name="barShowText" format="boolean" />
        <attr name="barShowPopup" format="boolean" />
    </declare-styleable>

    <declare-styleable name="VerticalLabelView">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DuoDrawerLayout">
        <attr name="menu" format="reference" />
        <attr name="content" format="reference" />
        <attr name="contentScaleClosed" format="float" />
        <attr name="clickToCloseScale" format="float" />
        <attr name="contentScaleOpen" format="float" />
        <attr name="menuScaleClosed" format="float" />
        <attr name="menuScaleOpen" format="float" />
        <attr name="menuAlphaClosed" format="float" />
        <attr name="menuAlphaOpen" format="float" />
        <attr name="marginFactor" format="float" />
    </declare-styleable>

    <declare-styleable name="DuoMenuView">
        <attr name="header" format="reference" />
        <attr name="footer" format="reference" />
        <attr name="background" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">

        <attr name="CircleImageView_civ_border_width" format="integer" />
        <attr name="CircleImageView_civ_border_color" format="integer" />
        <attr name="CircleImageView_civ_border_overlay" format="integer" />

    </declare-styleable>

    <declare-styleable name="ShimmerRecyclerView">
        <attr name="shimmer_demo_layout" format="reference" />
        <attr name="shimmer_demo_child_count" format="integer|reference" />
        <attr name="shimmer_demo_layout_manager_type" format="enum">
            <enum name="linear_vertical" value="0" />
            <enum name="linear_horizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="shimmer_demo_grid_child_count" format="integer|reference" />
        <attr name="shimmer_demo_shimmer_color" format="color|reference" />
        <attr name="shimmer_demo_angle" format="integer|reference" />
        <attr name="shimmer_demo_view_holder_item_background" format="color|reference" />
        <attr name="shimmer_demo_duration" format="integer|reference" />
        <attr name="shimmer_demo_mask_width" format="float|reference" />
        <attr name="shimmer_demo_reverse_animation" format="boolean|reference" />
    </declare-styleable>


    <declare-styleable name="ChartAttrs">

        <attr name="chart_axis" format="boolean" />
        <attr name="chart_axisThickness" format="dimension" />
        <attr name="chart_axisColor" format="reference|color" />
        <attr name="chart_axisBorderSpacing" format="dimension" />
        <attr name="chart_axisTopSpacing" format="dimension" />

        <attr name="chart_axisLabelsSpacing" format="dimension" />

        <attr name="chart_labels" format="enum">
            <enum name="outside" value="0" />
            <enum name="inside" value="1" />
            <enum name="none" value="2" />
        </attr>

        <attr name="chart_labelColor" format="reference|color" />
        <attr name="chart_fontSize" format="dimension" />
        <attr name="chart_typeface" format="string" />

        <attr name="chart_shadowColor" format="reference|color" />
        <attr name="chart_shadowDx" format="dimension" />
        <attr name="chart_shadowDy" format="dimension" />
        <attr name="chart_shadowRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="BarChartAttrs">
        <attr name="chart_barSpacing" format="dimension" />
        <attr name="chart_setSpacing" format="dimension" />
        <attr name="chart_cornerRadius" format="dimension" />
        <attr name="chart_barBackgroundColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="flFlow" format="boolean" />
        <attr name="flChildSpacing" format="enum|dimension">
            <enum name="auto" value="-65536" />
        </attr>
        <attr name="flMinChildSpacing" format="dimension" />
        <attr name="flChildSpacingForLastRow" format="enum|dimension">
            <enum name="auto" value="-65536" />
            <enum name="align" value="-65537" />
        </attr>
        <attr name="flRowSpacing" format="enum|dimension">
            <enum name="auto" value="-65536" />
        </attr>
        <attr name="flRtl" format="boolean" />
        <attr name="flMaxRows" format="integer" />
        <attr name="flRowVerticalGravity" format="enum">
            <enum name="auto" value="-65536" />
            <enum name="top" value="0x30" />
            <enum name="center" value="0x10" />
            <enum name="bottom" value="0x50" />
        </attr>
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="AnimCheckBox">
        <attr name="stroke_width" format="dimension" />

        <attr name="stroke_color" format="color" />

        <attr name="circle_color" format="color" />

        <attr name="checked" format="boolean" />

    </declare-styleable>

</resources>